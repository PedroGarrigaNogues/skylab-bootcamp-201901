
extends ../layout

block content
  each album in albums

    p
      if album.images[0]
        img(src=album.images[0].url width=200)
        a(href=`/album/${album.id}`) #{album.name}
      
      if !album.images[0]
        img(src=album.images[0] alt='404 ')
        a(href=`/album/${album.id}`) #{album.name}
